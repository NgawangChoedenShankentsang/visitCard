                    <form method="post" action="{{ path('card_delete', { id: card.id }) }}" style="display:inline;" onsubmit="return confirm('Wirklich lÃ¶schen?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ card.id) }}">
