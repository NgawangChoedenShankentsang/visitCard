{% extends 'base.html.twig' %}

{% block title %}Neue Visitenkarte{% endblock %}

{% block body %}
<h1>Neue Visitenkarte erstellen</h1>

{{ form_start(form, { attr: { enctype: 'multipart/form-data' } }) }}
    {{ form_row(form.vorname) }}
    {{ form_row(form.nachname) }}
    {{ form_row(form.email) }}
    {{ form_row(form.linkedinUrl) }}
    {{ form_row(form.photoFile) }}

    <button class="btn btn-primary">Speichern</button>
{{ form_end(form) }}
{% endblock %}
